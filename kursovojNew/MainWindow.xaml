<Window x:Class="kursovojNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursovojNew"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image x:Name="imgMainBack" Grid.RowSpan="2" Height="auto" Width="auto" />
        <Image x:Name="imgFiksiki" Grid.Row="0" Height="100" Width="100" Margin="431,94,261,53" />
        <Label x:Name="lblFirstApp" Grid.Row="0" Height="100" Content="Помоги Фиксикам" FontSize="45" Margin="10,50,10,10" VerticalAlignment="Center" MouseLeftButtonDown="clickFirstApp" MouseEnter="lblFirstAppMouseEnter" MouseLeave="lblFirstAppMouseLeave"   />
        <Image x:Name="imgLuntik" Grid.Row="1" Height="100" Width="100" HorizontalAlignment="Left" Margin="314,73,0,74"/>
        <Label x:Name="lblSecondApp" Grid.Row="1" Height="100" FontSize="45" Content="Выручи лунтика" Margin="35,30,32,30" HorizontalAlignment="Right" MouseLeftButtonDown="clickSecondApp" MouseEnter="lblSecondAppMouseEnter" MouseLeave="lblSecondAppMouseLeave" />
    </Grid>
</Window>
